{
    "type": "object",
    "description": "Representation of a link.",
    "example": {
        "id": 1234,
        "name": "Zust√§ndigkeitsverzeichnis",
        "url": "http://www.berlin.de/ba-mitte/zustaendigkeiten/",
        "target": true,
        "public": false,
        "organisation": 0
    },
    "required": [
        "url",
        "name"
    ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "pattern": "^[0-9]+$"
                }
            ],
            "default": 0
        },
        "name": {
            "type": "string",
            "default": ""
        },
        "url": {
            "type": "string",
            "default": ""
        },
        "target": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "boolean"
                },
                {
                    "type": "string",
                    "pattern": "^[01]$"
                }
            ],
            "description": "true if url should open in a new window",
            "default": 0
        },
        "public": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "boolean"
                },
                {
                    "type": "string",
                    "pattern": "^[01]$"
                }
            ],
            "description": "true if url should displayed as public link",
            "default": 0
        },
        "organisation": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "string",
                    "pattern": "^[0-9]+$"
                }
            ],
            "default": 0,
            "description": "greater than 0 if link is available for given organisation"
        }
    }
}