{
  "type": "object",
  "description": "An Availability is a representation of opening hours for a scope. It defines the time a scope offers appointments and a ticket printer is able to serve process numbers.",
  "example": {
    "bookable": {
      "startInDays": 2,
      "endInDays": 60
    },
    "description": "Sonderöffnungszeit",
    "endDate": 1447919116,
    "endTime": "15:30",
    "id": 1234,
    "kind": "default",
    "multipleSlotsAllowed": true,
    "type": "appointment",
    "version": 1,
    "repeat": {
      "afterWeeks": 0
    },
    "scope": {
      "id": 123,
      "kind": "default",
      "provider": {
        "id": 123456,
        "name": "Flughafen Schönefeld, Aufsicht",
        "source": "dldb"
      },
      "shortName": "Zentrale"
    },
    "slotTimeInMinutes": 12,
    "version": 1,
    "startDate": 1447919543,
    "startTime": "10:00",
    "weekday": {
      "thursday": true
    },
    "workstationCount": {
      "callcenter": 8,
      "intern": 10,
      "public": 3
    }
  },
  "required": [
    "startDate",
    "endDate",
    "scope",
    "type",
    "weekday"
  ],
  "additionalProperties": false,
  "properties": {
    "bookable": {
      "type": "object",
      "properties": {
        "startInDays": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ],
          "default": 1,
          "description": "number of days relative to today to start offering appointments"
        },
        "endInDays": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ],
          "default": 60,
          "description": "maximum number of days in the future to offer appointments"
        }
      }
    },
    "description": {
      "type": ["null", "string"],
      "description": "short note for internal usage"
    },
    "endDate": {
      "type": ["null", "number"],
      "description": "unix timestamp of a day until this availability is valid"
    },
    "endTime": {
      "type": ["null", "string"],
      "default": "23:59",
      "description": "format '0:00' or '16:30'"
    },
    "id": {
      "type": ["string", "number", "null"],
      "description": "ID for the availability. A NULL or zero means, that the availability is new."
    },
    "version": {
      "type": ["number"],
      "description": "Numeric version of the availability"
    },
    "kind": {
      "type": ["null", "string"],
      "description": "The kind of availability, used for validation and filtering"
    },
    "lastChange": {
      "type": ["null", "number"],
      "description": "unix timestamp of the last change on this availability"
    },
    "multipleSlotsAllowed": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "number"
        },
        {
          "type": "boolean"
        },
        {
          "type": "string",
          "pattern": "^[01]$"
        }
      ],
      "default": true,
      "description": "an appointment is allowed to take more than one time slot"
    },
    "processingNote": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Non persistent note usable for processing or logging calculation results, usually used for debugging"
      }
    },
    "repeat": {
      "type": "object",
      "properties": {
        "afterWeeks": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ],
          "description": "number of weeks for repeating the times, usually 1, 2 or 3"
        },
        "weekOfMonth": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ],
          "description": "number of week in month, on a value of 5 the last week of the month, even it is the 4th"
        }
      }
    },
    "scope": {
      "oneOf": [
        { "$ref": "scope.json" },
        { "type": "null" }
      ]
    },
    "slotTimeInMinutes": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "number"
        },
        {
          "type": "string",
          "pattern": "^[0-9]+$"
        }
      ],
      "default": 10,
      "description": "Multiplicated with a slotCount from an appointment this gives the duration in minutes for a appointment/process."
    },
    "startDate": {
      "type": ["null", "number"],
      "description": "unix timestamp of a day to start offering appointments"
    },
    "startTime": {
      "type": ["null", "string"],
      "description": "format '0:00' or '17:30'"
    },
    "type": {
      "type": "string",
      "enum": [
        "appointment",
        "openinghours",
        "break"
      ],
      "description": "The following type are available\n* appointment - defines times for appointments\n* openinghours - defines times where a scope is opened\n* break - defines times for a break (not implemented yet)\n"
    },
    "weekday": {
      "type": "object",
      "properties": {
        "monday": {
          "default": false,
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ]
        },
        "tuesday": {
          "default": false,
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ]
        },
        "wednesday": {
          "default": false,
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ]
        },
        "thursday": {
          "default": false,
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ]
        },
        "friday": {
          "default": false,
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ]
        },
        "saturday": {
          "default": false,
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ]
        },
        "sunday": {
          "default": false,
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ]
        }
      }
    },
    "workstationCount": {
      "type": "object",
      "properties": {
        "callcenter": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ],
          "default": 0,
          "description": "number of workstations to handle appointments if handed out to the client by a callcenter"
        },
        "intern": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ],
          "default": 0,
          "description": "maximum of workstations expected to handle appointments"
        },
        "public": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "number"
            },
            {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          ],
          "default": 0,
          "description": "number of workstations to offer appointments for booking using a public website"
        }
      }
    }
  }
}
