                                "identification": {
                                    "type": [
                                        "string"
                                    ],
                                    "description": "usually an email address"
                                },
                                "sendConfirmationEnabled": {
                                    "type": [
                                        "boolean",
                                        "number"
                                    ],
                                    "description": "true if confirmation sms are enabled"
