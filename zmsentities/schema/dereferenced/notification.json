                "dayoff": {
                    "type": "array",
                    "items": {
                        "$ref": "dayoff.json"
                    }
                },
                "email": {
                    "type": "string",
                    "description": "sender address for reminder mails to the clients",
                    "pattern": "^[a-zA-Z0-9_\\-\\.]{2,}@[a-zA-Z0-9_\\-\\.]{2,}\\.[a-z]{2,}$|^$",
                    "x-locale": {
                        "de_DE": {
                            "pointer": "E-Mail",
                            "messages": {
                                "pattern": "Die E-Mail Adresse muss eine valide E-Mail im Format max@mustermann.de sein"
                            }
                        }
                    }
                },
                "links": {
                    "type": "array",
                    "items": {
                        "$ref": "link.json"
                    }
                },
                "name": {
                    "type": "string"
                },
                "preferences": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "notifications": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "enabled": {
                                    "type": [
                                        "boolean",
                                        "number"
                                    ],
                                    "description": "true if sms are allowed"
