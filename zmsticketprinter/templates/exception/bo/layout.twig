{% extends "layout/main.twig" %}
{% block title %}{% trans %}Ein Fehler ist aufgetreten{% endtrans %}{% endblock %}
{% block pageid %}{% if task %}{{ task }}{% else %}exception{% endif %}{% endblock %}
{% block pageheader %}
	<div id="main-header">
		<span class="noprint">
			<div class="adressangabe">
				{% if header %}
				{{ header|trans }}
				{% else %}
                {% block adressangabe %}
					Ein Fehler ist aufgetreten
				{% endblock %}
				{% endif %}
            </div>
        </span>
    </div>
{% endblock %}
{% block content %}
	<div class="alert alert-error noprint textile">
        <h1>{{ title|trans }}</h1>

        {% if message %}
        	<p>
        	{{ message|trans }}
        	</p>
        {% endif %}
		 {% if helptext %}
        	<p>
        	{{ helptext|trans }}
        	</p>
        {% endif %}

        {% if showlinks %}
        <ul>
        	{% for link, name in showlinks %}
        	<li><a href="{{ urlGet(link) }}">{{ name|trans }}</a></li>
        	{% endfor %}
        </ul>
        {% endif %}
	</div>
{% endblock %}
