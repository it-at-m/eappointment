{% embed "block/scaffholding/board.twig" with {'class': 'queue-info-appointment-times'} %}
    {% block board_title %}
        Terminzeiten
        {% if workstation.useraccount.rights.scope %}
+            <a title="{% trans %}Öffnungszeit ändern{% endtrans %}" class="icon" href="{{ urlGet('scopeAvailabilityDay', {'id':workstation.scope.id, 'date': getNow()|date('Y-m-d')}, {}) }}">
+            <i class="fas fa-edit" aria-hidden="true"></i> <span class="aural">{% trans %}Öffnungszeiten ändern{% endtrans %}</span>
+            </a>
+        {% endif %}
    {% endblock %}
    {% block board_body %}
        <p>
        {% if workstation.queue.clusterEnabled == 1 %}
            {% trans %}Es wurde die Clusteransicht ausgewählt. Terminzeiten sind nur für einzelne Standorte abrufbar.{% endtrans %}
        {% else %}
            {% for key, availability in availabilityList %}
                {% if availability.type == 'appointment' %}
                    {% set openingStartTime = availability.startTime|split(":") %}
                    {% set openingEndTime = availability.endTime|split(":") %}
                    {{ openingStartTime.0 }}:{{ openingStartTime.1 }} - {{ openingEndTime.0 }}:{{ openingEndTime.1 }}<br />
                {% endif %}
            {% endfor %}
        {% endif %}
        </p>
    {% endblock %}
{% endembed %}
