        <label title="{{ args.title|trans }}" class="form-check-label" for="{{ fieldId }}">
        {% endif %}
            <input 
                type="hidden" 
                name="{{ args.name }}" 
                value="{% if args.value == 0 %}1{% else %}0{% endif %}" 
