{
  "name": "eappointment/zmsmessaging",
  "description": "messaging email and notifications",
  "license": "EUPL-1.2",
  "authors": [
    {
      "name": "Torsten Kunst",
      "email": "torsten.kunst@berlinonline.de"
    }
  ],
  "scripts": {
    "command": "bin/configure"
  },
  "config": {
    "platform": {
        "php": "7.3"
    },
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "require": {
    "phpmailer/phpmailer": "^6.4",
    "monolog/monolog": "1.*",
    "eappointment/mellon": "^2.6.0",
    "eappointment/zmsclient": "2.25.01",
    "eappointment/zmsentities": "2.25.01",
    "eappointment/zmsslim": "2.25.01",
    "roave/security-advisories": "dev-master",
    "giggsey/libphonenumber-for-php": "^8.8.4"
  },
  "autoload": {
    "psr-4": {
      "BO\\Zmsmessaging\\": "src/Zmsmessaging/",
      "BO\\Zmsmessaging\\Tests\\": "tests/Zmsmessaging/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.4",
    "phpspec/prophecy-phpunit": "^2.0.0",
    "phpmd/phpmd": "^2.3",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/berlinonline/slim-psr7"
    }
  ]
}
